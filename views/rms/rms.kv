<Rms>:
   BoxLayout:
      orientation: "vertical"
      size_hint_x: .7
      spacing: dp(12)
      padding: [dp(14), 0]
      BoxLayout:
         spacing: dp(12)
         size_hint_y: None
         height: dp(128)
         BoxLayout:
            size_hint_x: None
            width: self.height
            Image:
               source: "assets/imgs/logo-light.png"
         AnchorLayout:
            anchor_x: "left"
            padding: [dp(24), dp(4)]
            BackBox:
               bcolor: app.color_secondary_bg
               radius: [self.height* .1]
               size_hint_y: None
               height: dp(45)
               padding: [dp(12), 0, dp(12), 0]
               Text:
                  color: app.color_secondary_text
                  text: icon("icon-search")
                  font_size: sp(18)
                  size_hint_x: None
                  width: self.height
                  halign: "center"
                  valign: "middle"
               SearchBar:
                  hint_text: "Search by Name"




      BoxLayout:
         spacing: dp(12)
         orientation: "vertical"
         padding: [0, 0, dp(24), 0]
         BackBox:
            size_hint_y: None
            height: dp(48)
            bcolor: app.color_secondary_bg
            spacing: dp(12)
            padding: [dp(12), dp(2)]
            Text:
               text: "House Code"
               font_name: app.fonts.heading
               font_size: app.fonts.size.h4
               color: app.color_primary_text
               valign: "middle"
               size_hint_x: .3
            Text:
               text: "Rented by"
               font_name: app.fonts.heading
               font_size: app.fonts.size.h4
               color: app.color_primary_text
               valign: "middle"
               size_hint_x: .3

            Text:
               text: "Size"
               font_name: app.fonts.heading
               font_size: app.fonts.size.h4
               color: app.color_primary_text
               halign: "center"
               valign: "middle"
               size_hint_x: .2
            Text:
               text: "Price"
               font_name: app.fonts.heading
               font_size: app.fonts.size.h4
               color: app.color_primary_text
               valign: "middle"
               size_hint_x: .2
         BoxLayout:
            ScrollView:
               do_scroll: [False, True]
               size_hint_y: None
               height: self.parent.height
               GridLayout:
                  id: gl_products
                  cols: 1
                  size_hint_y: None
                  height: self.minimum_height
                  spacing: dp(12)



   BackBox:
      orientation: "vertical"
      size_hint_x: .3
      bcolor: app.color_alternate
      spacing: dp(12)
      padding: [0, 0, 0, dp(16)]
      BoxLayout:
         size_hint_y: None
         height: dp(54)
         spacing: dp(12)
         FlatButton:
            text: icon("icon-bell")
            color: app.color_primary_text
            font_size: app.fonts.size.h1
            size_hint_x: None
            width: self.height
         Widget:
         BoxLayout:
            RelativeLayout:
               Text:
                  text: icon("icon-chevron-down")
                  color: app.color_primary_text
                  font_size: app.fonts.size.h3
                  halign: "right"
               BoxLayout:
                  padding: [0, 0, dp(24), 0]
                  Spinner:
                     text: "first.abdul"
                     font_name: app.fonts.styled
                     color: app.color_primary_text
                     font_size: app.fonts.size.h3
                     text_size: self.size
                     halign: "right"
                     valign: "middle"
                     values: ['Profile', 'Logout']
                     background_normal: ""
                     background_down: ""
                     background_color: [0, 0, 0, 0]

      Divider:
         id: div
      BoxLayout:
         orientation: "vertical"
         spacing: dp(8)
         BoxLayout:
            size_hint_y: None
            height: dp(20)
            Text:
               text: "Current un-Rented"
               color: app.color_primary
               font_size: app.fonts.size.h3
               halign: "center"
         BoxLayout:
            orientation: "vertical"
            spacing: dp(8)
            padding: dp(12)
            BoxLayout:
               id: header_box
               size_hint_y: None
               spacing: dp(4)
               height: dp(24)
               Text:
                  text: "House Code"
                  color: app.color_primary_text
                  font_size: app.fonts.size.h4
                  halign: "left"
                  size_hint_x: .5
               Text:
                  text: "Size"
                  color: app.color_primary_text
                  font_size: app.fonts.size.h4
                  halign: "center"
                  size_hint_x: .25
               Text:
                  text: "Price"
                  color: app.color_primary_text
                  font_size: app.fonts.size.h4
                  halign: "right"
                  size_hint_x: .25
            Divider:
            BoxLayout:
               ScrollView:
                  do_scroll: [False, True]
                  size_hint_y: None
                  height: self.parent.height
                  GridLayout:
                     id: gl_receipt
                     cols: 1
                     spacing: dp(12)
                     size_hint_y: None
                     ReceiptItem:
                        name: "34567"
                        qty: 3
                        price: 800.00
                     ReceiptItem:
                        name: "3456789"
                        qty: 3
                        price: 800.00
                     ReceiptItem:
                        name: "234"
                        qty: 3
                        price: 800.00
                     ReceiptItem:
                        name: "9876"
                        qty: 3
                        price: 800.00
                     ReceiptItem:
                        name: "876"
                        qty: 3
                        price: 800.00
                     ReceiptItem:
                        name: "237"
                        qty: 3
                        price: 800.00


      Divider:
         id: div
      BoxLayout:
         size_hint_y: None
         height: dp(54)*2
         orientation: "vertical"
         spacing: dp(8)
         padding: [dp(12), 0]
         BoxLayout:
            spacing: sp(12)
            Text:
               text: "TOTAL"
               font_name: app.fonts.heading
               font_size: app.fonts.size.h3
               color: app.color_primary_text
               halign: "left"
            Text:
               text: "$ %s"%round(root.current_total, 2)
               font_name: app.fonts.heading
               font_size: app.fonts.size.h3
               color: app.color_primary_text
               halign: "right"
         RoundedButton:
            text: "Calculate Lose"
            font_name: app.fonts.heading
            font_size: app.fonts.size.h4
            color: rgba("#ffffff")
            bcolor: app.color_primary
            radius: [self.height*.1]
<Divider@Widget>:
   size_hint_y: None
   height: dp(1.2)
   canvas.before:
      Color:
         rgba: rgba("#dedede")
      Rectangle:
         pos: self.pos
         size: self.size

<ReceiptItem>:
   size_hint_y: None
   spacing: dp(4)
   height: dp(32)
   Text:
      text: root.name
      font_name: app.fonts.body
      color: app.color_primary_text
      font_size: app.fonts.size.h5
      halign: "left"
      size_hint_x: .5
   Text:
      text: "x%s"%str(root.qty)
      font_name: app.fonts.body
      color: app.color_primary_text
      font_size: app.fonts.size.h5
      halign: "center"
      size_hint_x: .25
   Text:
      text: str(round(root.price,2))
      font_name: app.fonts.body
      color: app.color_primary_text
      font_size: app.fonts.size.h5
      halign: "right"
      size_hint_x: .25

<ProductTile>:
   size_hint_y: None
   height: dp(48)
   bcolor: app.color_secondary_bg
   spacing: dp(12)
   padding: [dp(12), dp(2)]
   canvas.after:
      Color:
         rgba: app.color_secondary_bg
      Rectangle:
         pos: self.pos
         size: [self.size[0], dp(1)]
   Text:
      text: root.pcode
      font_name: app.fonts.body
      font_size: app.fonts.size.h4
      color: app.color_primary_text
      valign: "middle"
      size_hint_x: .3
   Text:
      text: root.name
      font_name: app.fonts.body
      font_size: app.fonts.size.h4
      color: app.color_primary_text
      valign: "middle"
      size_hint_x: .3
   BackBox:
      size_hint_x: .2
      #bcolor: app.color_alternate
      FlatButton:
         text: icon("icon-minus-circle")
         color: app.color_tertiary
         font_size: app.fonts.size.h3
         on_release: root.qty_callback(root, False) if root.qty_callback else print
      Text:
         text: str(root.qty)
         font_name: app.fonts.heading
         font_size: app.fonts.size.h4
         color: app.color_primary_text
         valign: "middle"
         halign: "center"
      FlatButton:
         text: icon("icon-plus-circle")
         color: app.color_secondary
         font_size: app.fonts.size.h3
         on_release: root.qty_callback(root, True) if root.qty_callback else print

   Text:
      text: str(round(root.price, 2))
      font_name: app.fonts.body
      font_size: app.fonts.size.h4
      color: app.color_primary_text
      valign: "middle"
      size_hint_x: .2