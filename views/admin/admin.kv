 #: import Users views.users.Users
 #: import Insights views.insights.Insights
 #: import Houses views.houses.Houses

<Admin>:
    spacing: dp(12)
    padding: [dp(24), dp(16)]
    BoxLayout:
        BackBox:
            radius: [self.width*.1]
            orientation: "vertical"
            spacing: dp(12)
            size_hint_x: .12
            bcolor: app.color_primary
            valign: "center"

            BoxLayout:
                size_hint_x: None
                height: self.width
                valign: "top"
                padding: dp(8)
                Image:
                    source: "assets/imgs/logo-dark.png"


            GridLayout:
                cols: 1
                spacing: dp(8)
                NavToggle:
                    text: "Point of Rent"
                    icon: icon("icon-home")
                    state: "down"
                    on_release: scrn_mngr.current = "scrn_rms"
                NavToggle:
                    text: "Manage Users"
                    icon: icon("icon-users")
                    on_release: scrn_mngr.current = "scrn_users"
                NavToggle:
                    text: "Manage Houses"
                    icon: icon("icon-home")
                    on_release: scrn_mngr.current = "scrn_houses"
                NavToggle:
                    text: "Rental Insight"
                    icon: icon("icon-bar-chart")
                    on_release: scrn_mngr.current = "scrn_insights"
                NavToggle:
                    text: "More Tasks"
                    icon: icon("icon-airplay")
                    on_release: scrn_mngr.current = "scrn_tasks"
            Widget:
            Widget:
            Widget:




        BoxLayout:
            size_hint_x: .89
            orientation: "vertical"
            spacing: dp(12)

            BoxLayout:
                size_hint_y: None
                height: dp(54)
            ScreenManager:
                id: scrn_mngr
                Screen:
                    name: "scrn_insights"
                    Insights:
                        id: insights
                Screen:
                    name: "scrn_rms"
                    Rms:
                        id: rms
                Screen:
                    name: "scrn_users"
                    Users:
                        id: users
                Screen:
                    name: "scrn_houses"
                    Houses:
                        id: houses
                Screen:
                    name: "scrn_tasks"
                    Tasks:
                        id: tasks



<NavToggle@ToggleButtonBehavior+BoxLayout>:
    size_hint_y: None
    height: dp(35)
    text: ""
    icon: ""
    group: "nav-items"
    spacing: dp(0)
    AnchorLayout:
        anchor_y: "center"
        size_hint_x: None
        width: dp(4)
        Widget:
            size_hint_y: .4
            canvas.before:
                Color:
                    rgba: [1,1,1,1] if root.state == "down" else [0,0,0,0]
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0,dp(6),dp(6),0]
    Text:
        text: root.icon
        color: [1,1,1,1]
        halign: "center"
        font_size: app.fonts.size.h5
        size_hint_x: None
        width: dp(26)
    Text:
        text: root.text
        color: [1,1,1,1]
        font_size: app.fonts.size.h6